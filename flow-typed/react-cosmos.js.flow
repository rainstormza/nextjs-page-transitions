import type { Node, ComponentType, ElementRef } from 'react';

declare module 'react-cosmos' {
  declare type FixtureType<P: {}> = {
    component: ComponentType<P>,
    name?: string,
    namespace?: string,
    props?: P,
    children?: Node,
    init?: ({ compRef: ?ElementRef<ComponentType<P>> }) => Promise<any>,
  };

  declare export function createFixture<P: {}, F: FixtureType<P>>(
    fixture: F
  ): F;
}
